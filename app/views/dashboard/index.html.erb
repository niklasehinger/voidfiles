<div class="min-h-screen bg-gradient-to-br from-voidfiles-white to-gray-50">
  <!-- Header -->
  <%= render 'shared/header' %>

  <!-- Flash Messages -->
  <% if flash[:notice] %>
    <div class="max-w-4xl mx-auto px-4 pt-6">
      <div class="bg-green-50 border border-green-200 text-green-700 px-6 py-4 rounded-xl font-semibold flex items-center justify-center gap-2 animate-fade-in">
        <span class="text-2xl">✅</span>
        <span><%= flash[:notice] %></span>
      </div>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="max-w-4xl mx-auto px-4 pt-6">
      <div class="bg-red-50 border border-red-200 text-red-700 px-6 py-4 rounded-xl font-semibold flex items-center justify-center gap-2 animate-fade-in">
        <span class="text-2xl">❌</span>
        <span><%= flash[:alert] %></span>
      </div>
    </div>
  <% end %>

  <!-- Dashboard Section -->
  <section class="pt-8 pb-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-3xl sm:text-4xl font-extrabold text-voidfiles-navy mb-4">
        <%= t('dashboard.welcome') %>, <%= current_user.name || current_user.email %>!
      </h1>
      <p class="text-lg text-gray-600 mb-8">
        <%= t('dashboard.subtitle') %>
      </p>
    </div>
  </section>

  <!-- Upload Section -->
  <%= render partial: 'home/upload_form', locals: { prproj_upload: @prproj_upload } %>

  <!-- Recent Uploads Section -->
  <% if @recent_uploads.any? %>
    <section class="py-12 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-voidfiles-navy mb-6 text-center"><%= t('dashboard.recent_uploads') %></h2>
        <div class="bg-white rounded-xl shadow-lg p-6">
          <ul class="divide-y divide-gray-200">
            <% @recent_uploads.each do |upload| %>
              <li class="py-4 flex items-center justify-between">
                <div>
                  <p class="font-semibold text-voidfiles-navy"><%= upload.title %></p>
                  <p class="text-sm text-gray-500"><%= l(upload.created_at, format: :long) %></p>
                </div>
                <%= link_to t('dashboard.view'), prproj_upload_path(upload, locale: I18n.locale), class: "text-voidfiles-blue hover:underline" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Footer -->
  <footer class="bg-voidfiles-navy text-voidfiles-white py-12 mt-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="text-2xl font-bold mb-4 text-white">VoidFiles</div>
        <p class="text-gray-300 mb-6">
          <%= t('footer.slogan') %>
        </p>
        <div class="text-sm text-gray-400">
          © 2024 VoidFiles. <%= t('footer.tech') %>
        </div>
      </div>
    </div>
  </footer>
</div>
