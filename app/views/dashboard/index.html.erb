<% elsif flash[:notice] %>
  <!-- Login Success Message -->
  <div class="max-w-4xl mx-auto px-4 pt-8">
    <div class="bg-green-50 border border-green-200 text-green-700 px-6 py-4 rounded-xl font-semibold flex items-center justify-center gap-2 animate-fade-in">
