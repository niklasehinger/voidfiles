<!-- Ready for first analysis -->
<section class="pt-6 pb-4 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-2xl sm:text-3xl font-bold text-voidfiles-navy mb-2">
      <%= t('dashboard.ready_first_analysis') %>
    </h1>
    <p class="text-lg text-gray-600 mb-4">
      <%= t('dashboard.upload_get_insights') %>
    </p>
  </div>
</section>

<!-- Upload Section -->
<section class="pb-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <%= render partial: 'home/upload_form', locals: { prproj_upload: @prproj_upload } %>
  </div>
</section>

<!-- Recent Uploads Section -->
<% if @recent_uploads.any? %>
  <section class="py-12 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-voidfiles-navy mb-6 text-center"><%= t('dashboard.recent_uploads') %></h2>
      <div class="bg-white rounded-xl shadow-lg p-6">
        <ul class="divide-y divide-gray-200">
          <% @recent_uploads.each do |upload| %>
            <li class="py-4 flex items-center justify-between">
              <div>
                <p class="font-semibold text-voidfiles-navy"><%= upload.title %></p>
                <p class="text-sm text-gray-500"><%= l(upload.created_at, format: :long) %></p>
              </div>
              <%= link_to t('dashboard.view'), prproj_upload_path(upload, locale: I18n.locale), class: "text-voidfiles-blue hover:underline" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </section>
<% end %>
