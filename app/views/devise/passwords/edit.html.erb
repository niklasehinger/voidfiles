<section class="relative bg-gradient-to-br from-voidfiles-white to-[#f6f8ff] pt-16 pb-8 px-4 sm:px-6 lg:px-8 overflow-hidden">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 p-8">
      <h1 class="text-3xl font-extrabold text-voidfiles-navy mb-2 text-center"><%= t("devise.passwords.edit_title") %></h1>
      <p class="text-center text-gray-500 mb-6"><%= t("devise.passwords.edit_subtitle") %></p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, 'data-turbo' => 'false' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-voidfiles-navy mb-1" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mb-1"><%= t("devise.passwords.min_length", count: @minimum_password_length) %></p>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-voidfiles-blue focus:outline-none text-base" %>
        </div>
        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-voidfiles-navy mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-voidfiles-blue focus:outline-none text-base" %>
        </div>
        <div class="mb-4">
          <%= f.submit t("devise.passwords.edit_submit"), class: "btn-primary w-full text-lg" %>
        </div>
      <% end %>
      <div class="mt-4 text-center text-sm text-gray-500">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
