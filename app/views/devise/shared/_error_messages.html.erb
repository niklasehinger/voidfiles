<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false">
    <ul class="mb-4">
      <% resource.errors.full_messages.each do |message| %>
        <li class="block text-red-600 font-bold text-base mb-2 bg-red-50 rounded px-3 py-2 border border-red-200"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% elsif flash[:alert] %>
  <div class="bg-red-50 border border-red-200 text-red-700 px-6 py-4 rounded-xl font-semibold flex items-center justify-center gap-2 animate-fade-in">
    <span class="text-2xl">❌</span>
    <span><%= flash[:alert] %></span>
  </div>
<% end %>
