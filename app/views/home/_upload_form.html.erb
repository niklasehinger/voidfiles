<section id="upload" class="py-20 bg-voidfiles-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-bold text-voidfiles-navy mb-8"><%= t('upload.ready_title') %></h2>

    <% if flash.now[:notice] %>
      <div class="mb-6 bg-green-100 border border-green-300 text-green-800 px-6 py-4 rounded-xl font-semibold flex items-center justify-center gap-2 animate-fade-in">
        <span class="text-2xl">‚úÖ</span>
        <span><%= flash.now[:notice] %></span>
      </div>
    <% end %>
    <% if prproj_upload && prproj_upload.errors.any? %>
      <div class="mb-6 bg-red-100 border border-red-300 text-red-800 px-6 py-4 rounded-xl font-semibold flex items-center justify-center gap-2 animate-fade-in">
        <span class="text-2xl">‚ùå</span>
        <span><%= t('upload.error_file_missing') %></span>
      </div>
    <% end %>
    <div class="bg-gray-50 rounded-xl p-8 border-2 border-dashed border-voidfiles-blue">
      <div class="text-6xl mb-4">üìÅ</div>
      <h3 class="text-xl font-semibold text-voidfiles-navy mb-2"><%= t('upload.form_title') %></h3>
      <p class="text-gray-600 mb-6"><%= t('upload.form_hint') %></p>
      
      <%= form_with model: prproj_upload, url: root_path, local: true, html: {multipart: true, class: "flex flex-col sm:flex-row gap-4 justify-center"} do |f| %>
        <div class="flex flex-col sm:flex-row gap-4 justify-center w-full">
          <div class="flex-1">
            <%= f.file_field :prproj_file, accept: ".xml", class: "btn-primary w-full text-base px-8 py-3 font-semibold shadow-md cursor-pointer" %>
          </div>
          <div class="flex-1">
            <%= f.text_field :title, placeholder: t('upload.form_placeholder'), class: "btn-secondary w-full text-base px-8 py-3 font-semibold" %>
          </div>
          <div class="flex-1">
            <%= f.submit t('upload.form_submit'), class: "btn-primary w-full text-base px-8 py-3 font-semibold shadow-md" %>
          </div>
        </div>
      <% end %>
      
      <p class="text-sm text-gray-500 mt-4">
        <%= t('upload.supported_format') %>
      </p>
    </div>
  </div>
</section> 